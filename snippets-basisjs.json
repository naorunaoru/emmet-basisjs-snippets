{
  "html": {
    "abbreviations": {
      "bs|bst": "<b:style src=\"${1}\" />",
      "bl|bln": "<b:l10n src=\"${1}\" />",
      "bd|bdf": "<b:define name=\"${1}\" type=\"${2}\" />",
      "bt|btx": "<b:text>${1}</b:text>",
      "bin": "<b:include src=\"${1}\" />",
      "bb|bbf": "<b:before ref=\"${1}\"></b:before>",
      "baf": "<b:after ref=\"${1}\"></b:after>",
      "bp|bpp": "<b:prepend ref=\"${1}\"></b:prepend>",
      "bap": "<b:append ref=\"${1}\"></b:append>",
      "brp": "<b:replace ref=\"${1}\"></b:replace>",
      "brm": "<b:remove ref=\"${1}\" />",
      "ba|bat": "<b:attr ref=\"${1}\" name=\"${2}\" value=\"${3}\" />",
      "baa": "<b:append-attr ref=\"${1}\" name=\"${2}\" value=\"${3}\" />",
      "bra": "<b:remove-attr ref=\"${1}\" name=\"${2}\" />",
      "bc|bcl": "<b:class ref=\"${1}\" value=\"${2}\" />",
      "bsc": "<b:set-class ref=\"${1}\" value=\"${2}\" />",
      "bi": "<b:isolate />"
    },
    "snippets": {
      "ln|ln:": "{l10n:${1}}"
    }
  }
}
